@model TagHelpersBuiltInAspNetCore.Controllers.Speaker

@{
    ViewBag.Title = "AnchorTagHelper";
}

<h2>AnchorTagHelper</h2>

@section Scripts
{
    <script src="http://cdnjs.cloudflare.com/ajax/libs/prettify/r298/run_prettify.js" type="text/javascript"></script>
}

<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/prettify/r298/prettify.css" type="text/css">

<style type="text/css">
    body {
        padding-top: 5px;
        padding-bottom: 40px;
    }

    .container {
        width: 90%;
    }

    div.row {
        border: 2px solid;
    }

    div.col {
        border: 1px solid;
    }

    .classWithPad {
        margin: 10px 10px 10px 10px;
    }

    .backcolor {
        background-color: #eff0f1;
    }

    .backcolortop {
        background: #ccc;
    }
</style>

<h1>AnchorTagHelper</h1>

@Html.Raw(Html.Encode(@"<a asp-action=""Index"" asp-controller=""Speaker"">Speakers</a>"))<br /><br />
<div id="DebugMe">
    <pretty replacement-text="Speakers"><a asp-action="Index" asp-controller="Speaker">Speakers</a></pretty>
</div>

<script>
    $(document).ready(function() {
        var options = {
            "indent": "auto",
            "indent-spaces": 2,
            "wrap": 120,
            "markup": true,
            "output-xml": false,
            "numeric-entities": true,
            "quote-marks": true,
            "quote-nbsp": false,
            "show-body-only": true,
            "quote-ampersand": false,
            "break-before-br": true,
            "uppercase-tags": false,
            "uppercase-attributes": false,
            "drop-font-tags": true,
            "tidy-mark": false
        };

        var innerHtmlNojQuery = $("div#DebugMe")[0].innerHTML;
        var result1 = tidy_html5(innerHtmlNojQuery, options);
        $("#PutHereNoJquery").text(result1);
        $("#PutHereNoJquery").wrapAll('<xmp id="htmlXmp" class="prettyprint" />');

        $('.nsyte').nonSuckyYouTubeEmbed();
        var innerHtmlWithjQuery = $("div#DebugMe")[0].innerHTML;

        $('#executeJqueryId')
            .on('click',
                function (e) {
                    var result2 = tidy_html5(innerHtmlWithjQuery, options);
                    $("#PutHereWithJquery").text(result2);
                    $("#PutHereWithJquery").wrapAll('<xmp id="htmlXmp" class="prettyprint" />');
                    PR.prettyPrint();
                });
    });
</script>